@model FilmsCatalog.Models.Film
@inject FilmsCatalog.Services.IUserPermissionsService UserPermissionsService
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Film</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Creator)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Creator.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RealeaseDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RealeaseDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DirectorName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DirectorName)
        </dd>
        <dt class="col-sm-2">
            Poster
        </dt>
        @if (Model.FilePath==null)
        {
        <dd class="col-sm-10">
            No Poster
        </dd>
        }
        else
        {
        <dd class="col-sm-10">
            <img src="@Model.FilePath" height="500" alt="@Model.FileName" />
        </dd>
        }
        

    </dl>
</div>
<div>
    @if (UserPermissionsService.CanEditFilm(Model))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a>@("|")
        <a asp-action="Index"> Back to List </a>
    }
    else
    {
        <a asp-action="Index"> Back to List </a>
    }


</div>
